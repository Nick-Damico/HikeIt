<div class="row text-center">
	<h1 class="p-2 col text-white display-4 font-w-100">Join a Hike and start your Adventure.</h1>
</div>

	
<div class="row text-white justify-content-around index-hike-card-container rounded">
	<% @hikes.each do |hike| %>

		<div class="col-8 col-sm-5 col-md-4 col-lg-3 border border-dark slow-grow hike-card mb-4 p-1 color bg-grey-red">

			<% if hike.hiking_trail.image_url %>
				<%= image_tag "#{hike.hiking_trail.image_url}", :class => "img-fluid w-100 card-img" %>
			<% else %>
				<%= image_tag "btn-find-hike", :options => { :size => "280x200" }, :class => "img-fluid card-img w-100" %>
			<% end %>

				<%= form_tag join_path(hike) do %>
					<% if hike.users.include?(current_user) || hike.leader == current_user %>
						<span class="btn card-btn btn-color-login rounded-0 w-75">You've Joined</span>

					<% else %>
						<%= submit_tag "Join", :class => "card-btn btn btn-login-form text-white rounded-0 w-50" %>
					<% end %>
				<% end %>
			
			<div class="col">
				<h3><%= link_to "#{hike.title}", hike_path(hike), :class => "font-w-300 color-burnt-orange" %></h3>
				<h4 class="text-white font-w-100"><%= "#{hike.hiking_trail.name}" %></h4>
				<ul class="no-style pl-0 font-w-100 color-slight-pink">
					
					<li><%= hike.description %></li>
					<li><%= display_date(hike) %></li>
				</ul>
				
			</div>
		</div>
	<% end %>
	<%= link_to "+Hike", new_user_hike_path(current_user), :class => "btn btn-sign_in-facebook text-white plan-hike-btn" %>
</div>