
<%= form_for(hike) do |f| %>
	<div class="field">
		<%= f.label :title %><br />
		<%= f.text_field :title %>	
	</div>

	<div class="field">
		<%= f.label :description %><br />
		<%= f.text_field :description %>
	</div>

	<div class="field">
		<%= f.label :hiking_trail %><br />
		<%= f.collection_select :hiking_trail, HikingTrail.all, :id, :name %>
	</div>
	
	<div class="field">
		<%= f.label :hike_date %><br />
		<%= f.date_select :hike_date %>
	</div>

	<div class="field">
		<%= f.label :hike_time %><br />
		<%= time_select :hike_time, {:default => {:hour => '10', :minute => '30' }}, {ampm: true} %>
	</div>

	<div class="field">
		<%= f.label :notes, "Additonal Notes for Hikers:" %><br />
		<%= f.text_area :notes %>
	</div>

	<%= f.submit %>
<% end %>