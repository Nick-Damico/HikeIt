<% if hike.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(hike.errors.count, "error") %>
      prohibited this hike from being planned:
    </h2>
 
    <ul>
    <% hike.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>